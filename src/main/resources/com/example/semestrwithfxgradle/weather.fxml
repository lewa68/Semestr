<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.semestrwithfxgradle.WeatherParcerController"
      spacing="10"
      style="-fx-font-family: 'Arial';">

    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>

    <VBox spacing="10">
        <ComboBox fx:id="cityComboBox" onAction="#fetchWeather" style="-fx-font-size: 16px; -fx-prompt-text-fill: #666666;" />

        <HBox fx:id="imageContainer" spacing="10">
            <ImageView fitHeight="50" fitWidth="50" />
        </HBox>

        <HBox spacing="10">
            <Label fx:id="resultLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        </HBox>
    </VBox>

    <VBox fx:id="forecastContainer" spacing="10" />

</HBox>